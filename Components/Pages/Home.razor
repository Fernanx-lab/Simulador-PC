@page "/"

<PageTitle>Mini Computador</PageTitle>

<div id="computer">
    <!-- Componentes -->
    <div class="component" id="cpu">
        <h3>CPU</h3>
        <div class="info">
            Registro A: 0<br />
            Registro B: 0
        </div>
    </div>

    <div class="component" id="cache">
        <h3>Cache</h3>
        <div class="info">
            Hits: 0<br />
            Misses: 0
        </div>
    </div>

    <div class="component" id="memory">
        <h3>Memória</h3>
        <div class="info">
            Endereço: 0<br />
            Valor: 0
        </div>
    </div>

    <div class="component" id="bus">
        <h3>Bus</h3>
        <div class="info">
            Status: idle
        </div>
    </div>

    <!-- Fios (SVG Curvos) -->
    <svg>
        <!-- CPU → Cache -->
        <path d="M50% 200 Q 40% 240, 25% 300" />
        <!-- CPU → Memória -->
        <path d="M50% 200 Q 60% 240, 75% 300" />
        <!-- Cache → Bus -->
        <path d="M25% 420 Q 37% 460, 50% 500" />
        <!-- Memória → Bus -->
        <path d="M75% 420 Q 63% 460, 50% 500" />
    </svg>
</div>

@* Estilo inline (funciona dentro do Razor) *@
<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        background-color: #111;
        background-image:
            linear-gradient(#333 1px, transparent 1px),
            linear-gradient(90deg, #333 1px, transparent 1px);
        background-size: 40px 40px;
        font-family: monospace;
        color: #0f0;
        overflow: hidden;
    }

    #computer {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .component {
        position: absolute;
        width: 150px;
        height: 120px;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 10px;
        box-shadow: 0 0 10px rgba(0,255,0,0.4);
        z-index: 10;
        transition: transform 0.3s;
    }

    .component:hover {
        transform: scale(1.05);
    }

    #cpu { background-color: #1a1aff; border: 2px solid #1a1aff; top: 80px; left: 50%; transform: translateX(-50%); }
    #cache { background-color: #ff1a1a; border: 2px solid #ff1a1a; top: 300px; left: 25%; }
    #memory { background-color: #1aff1a; border: 2px solid #1aff1a; top: 300px; left: 75%; transform: translateX(-100%); }
    #bus { background-color: #ffaa00; border: 2px solid #ffaa00; top: 500px; left: 50%; transform: translateX(-50%); }

    .component h3 {
        margin: 0;
        margin-bottom: 5px;
        font-size: 16px;
    }

    .info {
        font-size: 12px;
        line-height: 1.2em;
    }

    svg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    path {
        fill: none;
        stroke: #0f0;
        stroke-width: 3;
        filter: drop-shadow(0 0 4px #0f0);
        stroke-dasharray: 8;
        animation: pulse 2s linear infinite;
    }
</style>
